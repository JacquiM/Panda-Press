name: Simple GitHub Pages Deploy

on:
  workflow_dispatch:

permissions:
  contents: read
  pages: write
  id-token: write

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '18'

      - name: Install dependencies
        run: npm install

      - name: Build project
        run: |
          echo "Building with Vite..."
          npx vite build --config vite.config.github.ts
          echo "Build completed"

      - name: Debug and prepare files
        run: |
          echo "=== Debugging file structure ==="
          find . -name "index.html" -type f
          echo "=== Contents of dist/public ==="
          ls -la ./dist/public/ || echo "dist/public not found"
          echo "=== Copying files to root if needed ==="
          mkdir -p ./github-pages-deploy
          cp -r ./dist/public/* ./github-pages-deploy/
          ls -la ./github-pages-deploy/

      - name: Setup Pages
        uses: actions/configure-pages@v4

      - name: Upload artifact
        uses: actions/upload-pages-artifact@v3
        with:
          path: './github-pages-deploy'

      - name: Deploy to GitHub Pages
        uses: actions/deploy-pages@v4
